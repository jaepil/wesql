let MYSQLD_ERROR_START_LOG = $tmp_dir/ro2_start.err;
let MYSQLD_LOG_DIR = $tmp_dir/ro2_log;
--mkdir $MYSQLD_LOG_DIR
let MYSQLD_BINLOG_DIR = $MYSQLD_LOG_DIR/master-bin;
let MYSQLD_INNODB_WAL_DIR = $MYSQLD_LOG_DIR;
